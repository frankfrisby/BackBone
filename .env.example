# ==========================================
# BACKBONE Configuration
# Copy this file to .env and fill in your values
# See SETUP_GUIDE.md for detailed instructions
# ==========================================

# ==========================================
# AI Models (Required - pick at least one)
# ==========================================

# Claude AI (Primary - recommended)
# Get key from: https://console.anthropic.com
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-sonnet-4-20250514

# OpenAI (Optional - for GPT models)
# Get key from: https://platform.openai.com
OPENAI_API_KEY=
GPT_MINI_MODEL=gpt-4o-mini
GPT_AGENTIC_MODEL=o3-mini

# Primary model preference (claude or openai)
PRIMARY_AI_MODEL=claude

# Claude Code Integration (Optional - background agentic work)
CLAUDE_CODE_ENABLED=false
CLAUDE_CODE_WORKDIR=

# ==========================================
# User Profile
# ==========================================
USER_NAME=
USER_EMAIL=
USER_ROLE=
USER_FOCUS=
USER_FOCUS_AREAS=startups,finance,health

# ==========================================
# Stock Trading & Data
# ==========================================

# Alpaca Markets (for trading and real-time data)
# Get keys from: https://alpaca.markets
ALPACA_KEY=
ALPACA_SECRET=
ALPACA_URL=https://paper-api.alpaca.markets
ALPACA_DATA_URL=https://data.alpaca.markets

# Yahoo Finance (No key required - free data)
# BACKBONE uses Yahoo Finance for quotes with 3-minute rate limiting

# ==========================================
# Health & Wellness
# ==========================================

# Oura Ring
# Get token from: https://cloud.ouraring.com/personal-access-tokens
OURA_ACCESS_TOKEN=

# ==========================================
# Email Integration
# ==========================================

# Gmail
# Set up OAuth at: https://console.cloud.google.com
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=

# Outlook (Alternative)
# Set up at: https://portal.azure.com
OUTLOOK_CLIENT_ID=
OUTLOOK_CLIENT_SECRET=
OUTLOOK_REFRESH_TOKEN=
OUTLOOK_TENANT_ID=

# ==========================================
# Wealth Management
# ==========================================

# Plaid (Recommended - connects to most banks)
# Set up at: https://dashboard.plaid.com
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ACCESS_TOKEN=

# Robinhood (Direct - unofficial API)
ROBINHOOD_AUTH_TOKEN=

# Personal Capital / Empower (Session-based)
PERSONAL_CAPITAL_SESSION=

# ==========================================
# Social Media & Career
# ==========================================

# LinkedIn
# Get token from: https://www.linkedin.com/developers/apps
LINKEDIN_ACCESS_TOKEN=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Twitter/X
TWITTER_BEARER_TOKEN=

# Instagram
INSTAGRAM_ACCESS_TOKEN=

# ==========================================
# GitHub Integration
# ==========================================
# For private repo backup of BACKBONE config
# Get token from: https://github.com/settings/tokens

GITHUB_ACCESS_TOKEN=
GITHUB_USERNAME=
GITHUB_REPO_NAME=backbone-private
GITHUB_REPO_VISIBILITY=private

# ==========================================
# Cloud Sync (Mobile Access)
# ==========================================
# Supports: firebase, aws, custom

CLOUD_SYNC_PROVIDER=firebase
CLOUD_SYNC_API_KEY=
CLOUD_SYNC_PROJECT_ID=
CLOUD_SYNC_USER_ID=
CLOUD_SYNC_ENDPOINT=

# ==========================================
# Memory System
# ==========================================
BACKBONE_MEMORY_DIR=./memory
