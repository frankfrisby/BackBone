rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User documents — only the owner can read/write
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Shared ticker data — any authenticated user can read, any can write
    match /tickers/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Config — any authenticated user can read, no client writes
    match /config/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Updates — any authenticated user can read, only admin can write
    // To restrict writes to your admin account, replace the write rule with:
    //   allow write: if request.auth != null && request.auth.uid == "YOUR_ADMIN_UID";
    match /updates/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
