{
  "name": "backbone",
  "version": "3.0.0",
  "description": "Autonomous life management CLI powered by Claude AI",
  "main": "index.js",
  "type": "module",
  "bin": {
    "backbone": "bin/backbone.js"
  },
  "scripts": {
    "start": "node bin/backbone.js",
    "test": "node tests/autonomous-system.test.js",
    "server": "node src/server.js",
    "yahoo": "node src/server/yahoo-finance-server.js",
    "linkedin": "node scripts/scrape-linkedin.js",
    "linkedin:me": "node scripts/linkedin-me.js",
    "goals:voice": "node scripts/goals-voice.js",
    "icon": "node scripts/create-icon.js",
    "shortcut": "powershell -ExecutionPolicy Bypass -File scripts/create-shortcut.ps1",
    "mcp:projects": "node src/mcp/projects-server.js",
    "build": "pkg . --targets node20-win-x64 --output dist/BackBone.exe",
    "build:all": "pkg . --targets node20-win-x64,node20-macos-x64,node20-linux-x64 --out-path dist/",
    "installer": "npm run build && iscc installer/backbone-setup.iss"
  },
  "pkg": {
    "scripts": [
      "src/**/*.js",
      "bin/**/*.js",
      "scripts/**/*.js"
    ],
    "assets": [
      "skills/**/*",
      "data/**/*"
    ],
    "targets": [
      "node20-win-x64"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "cli",
    "ai",
    "life",
    "productivity",
    "claude"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "chalk": "^5.6.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "firebase": "^10.7.0",
    "ink": "^6.6.0",
    "ink-big-text": "^2.0.0",
    "ink-box": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "personal-capital-sdk": "^1.0.0",
    "playwright": "^1.49.2",
    "twilio": "^5.12.0",
    "ws": "^8.18.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.12.0",
    "zig": "^0.3.0"
  }
}
