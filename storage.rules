rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // User backup data — any authenticated user
    match /backbone/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Update packages — any authenticated user can download, only admin can upload
    // To restrict uploads to your admin account, replace the write rule with:
    //   allow write: if request.auth != null && request.auth.uid == "YOUR_ADMIN_UID";
    match /updates/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
